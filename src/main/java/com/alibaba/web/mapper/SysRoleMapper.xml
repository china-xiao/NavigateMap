<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.web.dao.ISysRoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.alibaba.web.entity.po.SysRole">
        <id column="role_id" property="roleId" />
        <result column="name" property="name" />
        <result column="remark" property="remark" />
        <result column="order_no" property="orderNo" />
        <result column="company_id" property="companyId" />
        <result column="company_name" property="companyName" />
        <result column="created_id" property="createdId" />
        <result column="created_name" property="createdName" />
        <result column="updated_id" property="updatedId" />
        <result column="updated_name" property="updatedName" />
        <result column="created" property="created" />
        <result column="updated" property="updated" />
        <result column="is_deleted" property="isDeleted" />
    </resultMap>
    <insert id="insertRoleModule">
        INSERT INTO sys_role_module VALUES(#{roleid},#{mid})
    </insert>
    <delete id="deleteByRoleId">
        DELETE FROM sys_role_module WHERE role_id=#{roleid}
    </delete>
    <select id="findAllRoles" resultType="com.alibaba.web.entity.po.SysRole">
        SELECT * FROM sys_role WHERE company_id=#{companyId}
    </select>
    <select id="findByUserId" resultType="com.alibaba.web.entity.po.SysRole">
        SELECT
        	r.*
        FROM
        	sys_user u
        LEFT JOIN sys_role_user ru ON ru.user_id = u.id
        LEFT JOIN sys_role r ON r.id=ru.role_id
        WHERE u.id=#{userId}
    </select>

</mapper>
